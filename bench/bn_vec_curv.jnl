! bn_vec_curv.jnl
!
! vector plots with curvilinear coordinates
! shift the data north so as to see effect of projection.   
!
! ACM  10/23/01 
!
use gt4d011
def axis/y=20:70:1 northax

let vn = v[gy=northax@asn]
let un = u[gy=northax@asn]

set reg/x=138w:122w/y=55:70/k=1/l=5

go mp_orthographic 230 60; set grid un
vec/noax/len=1  un*0,vn*0+1,x_page,y_page
vec/over/len=1  un*0+1,vn*0,x_page,y_page
vec/over/len=1.4  un*0+1,vn*0+1,x_page,y_page
vec/over/len=2  un*0+1,vn*0+1,x_page,y_page
